<mvc:View controllerName="com.infocus.TimeApprovalV2.controller.MainView" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core" xmlns="sap.m" height="100%" displayBlock="true">
	<App id="app">
		<l:Splitter id="_IDGenSplitter1" height="100%">
			<l:contentAreas>
				<Panel id="_IDGenPanel1" height="100%" class="sapUiNoContentPadding">
					<layoutData>
						<l:SplitterLayoutData size="30%"/>
					</layoutData>
					<content>
						<OverflowToolbar>
							<SearchField id="searchfemp" liveChange="onEmpSearch" width="80%"/>
							<ToolbarSpacer/>
							<Button icon="sap-icon://refresh" press="onRefreshPress"/>
						</OverflowToolbar>
						<List id="idList" items="{dataSet>/empList}" selectionChange=".onSelectionChange" mode="SingleSelectMaster" growing="true"
							growingThreshold="50" includeItemInSelection="true">
							<!--<StandardListItem title="{dataSet>Ename}" description="{dataSet>Regdate}"/>-->
							<ObjectListItem title="{dataSet>Ename}">
								<ObjectAttribute text="EmpCode: {dataSet>EmpCode}"/>
							</ObjectListItem>
						</List>
					</content>
				</Panel>
				<Panel id="_IDGenPanel2" height="100%" class="sapUiNoContentPadding">
					<core:Fragment fragmentName="com.infocus.TimeApprovalV2.view.DetailsFragment" type="XML"/>
				</Panel>
			</l:contentAreas>
		</l:Splitter>
	</App>
</mvc:View>